<h1 class="title-page">Советы</h1>
<%= flash_msg(flash[:notice]) %>
<%= link_to plus_icon + " Добавить" , new_website_advice_path, :class => "btn button-add" %>
<div id="website-manage">
  <table class="table table-striped table-condensed customers" id="advice_table">
    <thead>
      <tr>
        <th>Название</th>
        <th>Автор</th>
        <th>Дата добавления</th>
        <th>Действия</th>
      </tr>
    </thead>

    <tbody>
      <% @advices.each do |a| %>
        <tr>
          <td><%= link_to a.title, a %></td>
          <td><%= a.author %></td>
          <td><%= to_date(a.created_at) %></td>
          <td class="actions-buttons">
            <%= link_to edit_icon, edit_website_advice_path(a) %>
            <%= link_to delete_icon, a, :method => :delete, :confirm => "Вы уверены?" %>
          </td>
        </tr>      
        <% end %>
      </tbody>
    </table>
    <%= paginate @advices %>
</div>