<h1 class="title-page">
  <%= link_to "Управление сайтом", website_manage_path %> → Информация о ЖК
</h1>
<%= flash_msg(flash[:notice]) %>
<%= link_to plus_icon + " Добавить" , new_website_state_path, :class => "btn button-add" %>
<div id="website-manage">
  <table class="table table-striped table-condensed customers" id="advice_table">
    <thead>
      <tr>
        <th>Название</th>
        <th>Адрес</th>
        <th>Действия</th>
      </tr>
    </thead>

    <tbody>
      <% @states.each do |s| %>
        <tr>
          <td><%= link_to s.title, s %></td>
          <td><%= s.address %></td>
          <td class="actions-buttons">
            <%= link_to edit_icon, edit_website_state_path(s) %>
            <%= link_to delete_icon, s, :method => :delete, :confirm => "Вы уверены?" %>
          </td>
        </tr>      
        <% end %>
      </tbody>
    </table>
    <%= paginate @states %>
</div>