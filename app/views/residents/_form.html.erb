<%= form_for(@resident, :html => 
  {:class => 'form-horizontal resident-form-validation'}) do |f| %>
  <%= error_messages_for(@resident) %>
  <fieldset>
    <legend>Редактирование ЖК:</legend>
    <div class="control-group">
      <%= f.label :title, "Название:" %>
      <div class="controls">
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit "Редактировать", :class => "btn btn-primary" %>
      <button type="reset" class="btn cancel-form">Отмена</button>
    </div>
  </fieldset>
<% end %>