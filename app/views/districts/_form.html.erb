<%= form_for(@district, :html => 
  {:class => 'form-horizontal district-form-validation'}) do |f| %>
  <%= error_messages_for(@district) %>
  <fieldset>
    <legend>Редактирование района</legend>
    <div class="control-group">
      <%= f.label :title, "Название:" %>
      <div class="controls">
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit "Редактировать", :class => "btn btn-primary" %>
      <button type="reset" class="btn cancel-form">Отмена</button>
    </div>
  </fieldset>
<% end %>